<?xml version="1.0" encoding="utf-8"?>
<s:Application 
	xmlns:fx="http://ns.adobe.com/mxml/2009" 
	xmlns:s="library://ns.adobe.com/flex/spark"  
	xmlns:mx="library://ns.adobe.com/flex/mx" 
	xmlns:x2="x2.*" 
	 
	
	 
	width="100%" height="100%" 
	preinitialize="{iR=Fun.getLang('RepairForm')}"
 	creationComplete="init()"
 	>
	<fx:Script>
		<![CDATA[		
			import x2.*; import mx.collections.ArrayList; import mx.collections.ArrayCollection;
			
			private var is_app:String = Fun.sApp;
			[Bindable]
			private var iR:Object;
			
			private function init():void {			
				list_1.wQuery = new RepairFormQ();
				list_1.wEdit = new RepairFormE();			
				list_1.gList = grid_1;
				list_1.init();			
				
				var t_data:Object ={
					data: "listRepairForm"
				};
				grid_1.dataProvider = new ArrayCollection(Fun.readRows(is_app, t_data));
			}
		]]>
	</fx:Script>
	<x2:sysBG/>
	<x2:subFunHead/>

	<x2:comList x="81" y="59" id="list_1">
	</x2:comList>
	<s:DataGrid id="grid_1" x="55" y="87" width="92%" height="80%" alpha="0.7">
		<s:columns>
			<s:ArrayList>
				<s:GridColumn headerText="{iR.sn}" dataField="sn" width="100"/>
				<s:GridColumn headerText="{iR.createDate}" dataField="createDate" width="130"/>			
				<s:GridColumn headerText="{iR.fortuneName}" dataField="fortuneName"/>
				<s:GridColumn headerText="{iR.finishDate}" dataField="finishDate" width="180"/>
				<s:GridColumn headerText="{iR.rName}" dataField="rName" width="120"/>
				<s:GridColumn headerText="{iR.reviseDate}" dataField="reviseDate" width="180"/>
			</s:ArrayList>
		</s:columns>
	</s:DataGrid>
</s:Application>
