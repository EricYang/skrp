<?xml version="1.0" encoding="utf-8"?>
<s:Application 
	xmlns:fx="http://ns.adobe.com/mxml/2009" 
	xmlns:s="library://ns.adobe.com/flex/spark"  
	xmlns:mx="library://ns.adobe.com/flex/mx" 
	xmlns:x2="x2.*" 
	 
	
	 
	width="100%" height="100%"
	creationComplete="init()"
	preinitialize="{iR=Fun.getLang('rptTeacher')}"
	>
	<fx:Script>
		<![CDATA[			
			import x2.*; import mx.collections.ArrayList; import mx.collections.ArrayCollection;
			
			[Bindable]
			private var iR:Object;
			[Bindalbe]
			private var is_app:String = Fun.sApp;			
			[Bindable]
			public var g_row:Array;
			
			private function init():void {
				var v_data:Object = {
					data: "listRptTeacher",
					valueSn: int(0)
				};
				g_row = Fun.readRows(is_app, v_data);				
				openChart();
			}
			private function openChart():void {			
				var t_win:DispPieChart = new DispPieChart();
				t_win.g_row = g_row;
				Fun.openPopup(t_win, this);	
			}
		]]>
	</fx:Script>
	<x2:sysBG/>
	<x2:subFunHead/>

	<x2:BtnChart x="81" y="59" id="dispChart" click="openChart()"/>
</s:Application>
