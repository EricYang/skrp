<?xml version="1.0" encoding="utf-8"?>
<s:Application 
	xmlns:fx="http://ns.adobe.com/mxml/2009" 
	xmlns:s="library://ns.adobe.com/flex/spark"  
	xmlns:mx="library://ns.adobe.com/flex/mx" 
	xmlns:x2="x2.*" 
	 
	
	 
	width="100%" height="100%" 
 	creationComplete="init()"
	preinitialize="{iR=Fun.getLang('BabyWatch')}"
 	>
	<fx:Script>
		<![CDATA[		
			import x2.*; import mx.collections.ArrayList; import mx.collections.ArrayCollection;
			
			[Bindable]
			private var iR:Object;
			[Bindable]
			private var is_app:String = Fun.sApp;			
			[Bindable]			
			private var ia_classInfoName:ArrayList = new ArrayList(Fun2.classInfoNameDS(is_app, false));
			[Bindable]
			private var ia_subjectWatch:ArrayList = new ArrayList(Fun2.subjectWatchDS(is_app, false));
			[Bindable]
			public var ia_itemName:ArrayList = new ArrayList(Fun2.itemNameDS(is_app, 6, true));

			private function init():void {	
				//list_1.nAppRange = 1; //個人
				//list_1.asFOwner = ["creator"];
				
				list_1.wQuery = new BabyWatchQ();
				list_1.wEdit = new BabyWatchE();			
				list_1.gList = grid_1;
				list_1.init();
				
				var t_data:Object ={
					data: "listBabyWatch",
					csDataTemp: Fun2.gbClassLeaves
				};
				grid_1.dataProvider = new ArrayCollection(Fun.readRows(is_app, t_data));
			}
				
			private function classInfoName(p_row:Object, p_column:GridColumn):String {
				return AR.getListLabel(ia_classInfoName, p_row[p_column.dataField]);
			}
			private function itemName(p_row:Object, p_column:GridColumn):String {
				return AR.getListLabel(ia_itemName, p_row[p_column.dataField]);
			}
			private function catchFun(p_data:Object):Boolean {
				var t_row:Object = grid_1.selectedItem;
				switch (p_data.fun){
					case "U":
					case "D":
					case "V":						
						if (t_row){
							if (Fun.sLoginId != t_row.creator){
								switch (p_data.fun){
									case "U":
										list_1.btnClick("V");
										return true;
										break;
									case "D":
										Fun.msg("E", "無權限刪除");
										return true;
										break;
								}					
							}	
						}
						break;
				}
				return false;
			}
		]]>
	</fx:Script>
	<x2:sysBG/>
	<x2:subFunHead/>
	
	<x2:comList x="81" y="59" id="list_1" fCatchFun="catchFun">
	</x2:comList>
	<s:DataGrid id="grid_1" x="55" y="87" width="92%" height="80%" alpha="0.7">
		<s:columns>
			<s:ArrayList>
				<s:GridColumn dataField="sn" visible="false"/>
				<s:GridColumn headerText="{iR.acaName}" dataField="acaName" width="80"/>
				<s:GridColumn headerText="{iR.classLeavesSn}" dataField="classLeavesSn" width="150" labelFunction="classInfoName"/>			
				<s:GridColumn headerText="{iR.studentName}" dataField="studentName" width="150"/>			
				<s:GridColumn headerText="{iR.funcItemSn}" dataField="funcItemSn" width="100" labelFunction="itemName"/>
				<s:GridColumn headerText="{iR.cDate}" dataField="cDate" width="85"/>
				<s:GridColumn headerText="{iR.watchTime}" dataField="watchTime" width="70"/>
				<s:GridColumn headerText="{iR.behavior}" dataField="behavior"/>			
				<s:GridColumn headerText="{iR.creator}" dataField="creator" width="80"/>
				<s:GridColumn headerText="{iR.createDate}" dataField="createDate" width="130"/>
			</s:ArrayList>
		</s:columns>
	</s:DataGrid>
</s:Application>
