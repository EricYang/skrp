<?xml version="1.0" encoding="utf-8"?>
<s:Application 
	xmlns:fx="http://ns.adobe.com/mxml/2009" 
	xmlns:s="library://ns.adobe.com/flex/spark"  
	xmlns:mx="library://ns.adobe.com/flex/mx" 
	xmlns:x2="x2.*" 
	 
	
	 
	width="100%" height="100%"
	preinitialize="{iR=Fun.getLang('StartClass')}"
 	creationComplete="init()"	
 	>
	<fx:Script>
		<![CDATA[		
			import x2.*; import mx.collections.ArrayList; import mx.collections.ArrayCollection;
			
			[Bindable]
			private var iR:Object;
			[Bindable]
			private var is_app:String = Fun.sApp;

			private function init():void {			
				list_1.nAppRange = 1; //0 不分  1 個人	2 部門
				list_1.asFOwner = ["creator"];
				
				list_1.wQuery = new StartClassQ();
				list_1.wEdit = new StartClassE();			
				list_1.gList = grid_1;
				list_1.init();			
				
				var t_data:Object ={
					data: "listStartClass"
				};
				grid_1.dataProvider = new ArrayCollection(Fun.readRows(is_app, t_data));	
			}				
			
			public function cmdFunOpen1():void{				
				var t_win:ProStartClass = new ProStartClass();				
				Fun.openPopup(t_win, this);
			}
			public function cmdFunOpen2():void{
				var t_win:ProStudentStatus = new ProStudentStatus();				
				Fun.openPopup(t_win, this);
			}
		]]>
	</fx:Script>
	<x2:sysBG/>
	<x2:subFunHead/>

	<x2:comList x="81" y="59" id="list_1">
	</x2:comList>	
	<mx:HBox y="60" right="60">
		<mx:Button click="cmdFunOpen1()" icon="@Embed(source='x2/image/update.gif')" id="cmdOpen1" label="{iR.cmdOpen1}" buttonMode="true"/>
		<mx:Button click="cmdFunOpen2()" icon="@Embed(source='x2/image/update.gif')" id="cmdOpen2" label="{iR.cmdOpen2}" buttonMode="true"/>
	</mx:HBox>
	<s:DataGrid id="grid_1" x="55" y="87" width="92%" height="80%" alpha="0.7">
		<s:columns>
			<s:ArrayList>
				<s:GridColumn dataField="sn" visible="false"/>
				<s:GridColumn headerText="{iR.academicYear}" dataField="academicYear" width="100"/>
				<s:GridColumn headerText="{iR.semester}" dataField="semester" width="100"/>
				<s:GridColumn headerText="{iR.theClassName}" dataField="theClassName"/>			
				<s:GridColumn headerText="{iR.classLeavesName}" dataField="classLeavesName"/>
				<s:GridColumn headerText="{iR.creator}" dataField="creator" width="80"/>
				<s:GridColumn headerText="{iR.createDate}" dataField="createDate" width="130"/>
				<s:GridColumn headerText="{iR.reviser}" dataField="reviser" width="80"/>
				<s:GridColumn headerText="{iR.reviseDate}" dataField="reviseDate" width="130"/>
			</s:ArrayList>
		</s:columns>
	</s:DataGrid>
</s:Application>
