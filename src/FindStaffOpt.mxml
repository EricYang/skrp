<?xml version="1.0" encoding="utf-8"?>
<s:TitleWindow 
	xmlns:fx="http://ns.adobe.com/mxml/2009" 
	xmlns:s="library://ns.adobe.com/flex/spark"  
	xmlns:mx="library://ns.adobe.com/flex/mx" 
	xmlns:x2="x2.*"
	width="600" height="512" 
	 
  	creationComplete="init()"
	preinitialize="{iR=Fun.getLang('FindStaff')}"
	 close="closeWin()">
	
	<fx:Script>
		<![CDATA[
			import mx.collections.ArrayCollection;
			import mx.collections.ArrayList;
			
			import x2.*;

			public var fAfterOk:Function;
			
			[Bindable]
			private var iR:Object;			
			[Bindable]
			private var is_app:String = Fun.sApp;	
			[Bindale]
			public var ia_data:ArrayCollection;	
			[Bindable]
			private var ia_gender:ArrayList = new ArrayList(Fun2.genderDS(is_app, false));
			[Bindable]
			public var ia_titles:ArrayList = new ArrayList(Fun2.titlesDS(is_app, false));
			[Bindable]
			private var ia_staffInfo:ArrayList = new ArrayList(Fun2.staffDS(is_app, false));

			private function init():void{
				qry_1.sApp = is_app;
				qry_1.sInf = "FindStaffOpt";
				qry_1.gList = grid_1;
				qry_1.aoItem = [
					{source:deptSn},
					{source:cName}
				];
				qry_1.init();				
			}
			
			private function gender(p_row:Object, p_column:GridColumn):String {
				return AR.getListLabel(ia_gender, p_row[p_column.dataField]);
			}
			private function titles(p_row:Object, p_column:GridColumn):String {
				return AR.getListLabel(ia_titles, p_row[p_column.dataField]);
			}
			
			private function afterSubmit(p_data:Object):void{
				ia_data = grid_1.dataProvider as ArrayCollection;
				if (ia_data){
					for (var j:int=0; j<ia_data.length; j++){
						for (var k:int=0; k<Fun2.bGlobal.length; k++){
							if (ia_data[j].sn == Fun2.bGlobal[k].staffSn){
								ia_data[j].vFlag = 1;																
							}
						}					
					}
					grid_1.dataProvider = ia_data;
				}
			}
			
			private function okClick():void{								
				var ta_row:ArrayCollection = grid_1.dataProvider as ArrayCollection;
				var tn_len:int = ta_row.length;
				
				//將有選擇的資料存入
				var transData:Array = [];
				for (var x:int=tn_len - 1; x>=0; x--){
					if (int(ta_row[x].checkFlag) == 1){
						var s_data:Object = {
							sn: ta_row[x].sn, 
							empNo: ta_row[x].empNo,
							titlesSn: ta_row[x].titlesSn,
							cName: ta_row[x].cName, 
							eName: ta_row[x].eName, 
							gender: ta_row[x].gender														
						};
						transData.push(s_data);
					}
				}
				
				if (transData.length!=0){
					Fun2.aGlobal = transData;
					
					fAfterOk();
					Fun.closePopup(this);
					//qry_1.selectRow();
				}else{
					Fun.msg("I", "請先選擇資料");
				}
			}
			private function serialNoLabelFunc(p_row:Object, p_column:GridColumn):String {
				var index:int = p_column.grid.dataProvider.getItemIndex(p_row);
				if (index > -1) {
					return (index + 1).toString();
				}
				return "";
			}
			
			private function closeWin():void{
				Fun.closePopup(this);
			}
			
		]]>
	</fx:Script>	
	<mx:Form x="10" y="10">
		<mx:FormItem label="{iR.deptSn} :" height="26">
			<x2:DDL1 id="deptSn" dataProvider="{ia_staffInfo}"></x2:DDL1>			
		</mx:FormItem>
		<mx:FormItem label="{iR.cName} :">
			<s:TextInput id="cName"/>
		</mx:FormItem>
	</mx:Form>
	<mx:HRule x="0" y="108" width="100%"/>
	<mx:Form x="10.5" y="116">
		<mx:HBox width="100%" verticalAlign="bottom">
			<mx:Label text="{iR.sList}：" fontWeight="bold"/>
			<mx:HBox horizontalAlign="right" width="100%">
				<mx:Button click="okClick()" icon="@Embed(source='x2/image/checked.gif')" id="cmdOk" label="確定" buttonMode="true"/>
			</mx:HBox>
		</mx:HBox>		
		<s:DataGrid id="grid_1" width="540" alpha="0.7" height="288">
			<s:columns><s:ArrayList>
				<s:GridColumn headerText="No." dataField="serialNo" labelFunction="serialNoLabelFunc" width="40"/>
				<s:GridColumn headerText="選取" dataField="checkFlag" width="60">
				   	<s:itemRenderer><fx:Component><x2:irCenterVH>
					 <x2:Check2 toolTip="{data.vFlag!=1 ? '':'此筆資料已經存在，不得選取。'}" enabled="{data.vFlag!=1}" chromeColor="{data.vFlag!=1 ? 0XFFFFFF:0XB2B6BC}"/>
					</x2:irCenterVH></fx:Component></s:itemRenderer>
				</s:GridColumn>
				<s:GridColumn headerText="{iR.empNo}" dataField="empNo"/>
				<s:GridColumn headerText="{iR.titlesSn}" dataField="titlesSn" labelFunction="titles"/>
				<s:GridColumn headerText="{iR.cName}" dataField="cName"/>
				<s:GridColumn headerText="{iR.eName}" dataField="eName"/>
				<s:GridColumn headerText="{iR.gender}" dataField="gender" labelFunction="gender"/>				
			</s:ArrayList></s:columns>
		</s:DataGrid>			
	</mx:Form>
	<x2:comQuery id="qry_1" x="493" y="7" height="58" fAfterSubmit="afterSubmit">
	</x2:comQuery>
</s:TitleWindow>
