<?xml version="1.0" encoding="utf-8"?>
<s:Application 
	xmlns:fx="http://ns.adobe.com/mxml/2009" 
	xmlns:s="library://ns.adobe.com/flex/spark"  
	xmlns:mx="library://ns.adobe.com/flex/mx" 
	xmlns:x2="x2.*" 
	 
	
	 
	width="100%" height="100%" 
 	creationComplete="init()"
	preinitialize="{iR=Fun.getLang('Project')}"
 	>
	<fx:Script>
		<![CDATA[		
			import x2.*; import mx.collections.ArrayList; import mx.collections.ArrayCollection;
			import mx.formatters.DateFormatter;
			
			[Bindable]
			private var iR:Object;			
			[Bindable]
			private var is_app:String = Fun.sApp;
			[Bindable]
			private var i_session:Object = Fun.readJson(is_app, {type:"getSession", sessionName:["usersSn"]});
			[Bindable]
			public var ia_itemName:ArrayList = new ArrayList(Fun2.itemNameDS(is_app, 4, true));

			private function init():void {		
				list_1.nAppRange = 1; //0 不分  1 個人	2 部門
				list_1.asFOwner = ["creator"];
				
				list_1.wQuery = new ProjectQ();
				list_1.wEdit = new ProjectE();			
				list_1.gList = grid_1;
				list_1.init();			
				
				var t_data:Object ={
					data: "listProject"
				};
				grid_1.dataProvider = new ArrayCollection(Fun.readRows(is_app, t_data));	
			}						
			private function itemName(p_row:Object, p_column:GridColumn):String {
				return AR.getListLabel(ia_itemName, p_row[p_column.dataField]);
			}
			private function catchFun(p_data:Object):Boolean {
				switch (p_data.fun){					
					case "C":
						var docNo:DateFormatter = new DateFormatter();
						docNo.formatString = "YYYYMMDDJJNNSS";
						
						ProjectE(list_1.wEdit).docNoaTemp = String(docNo.format(new Date())) + String(i_session.usersSn) ;						
						break;
					case "U":
						var t_row:Object = grid_1.selectedItem;
						
						var c_data:Object = {
							data: "ToDoListDocNoa",
							sn: int(t_row.sn)
						};						
						var ia_data:Object = Fun.readRow(is_app, c_data);				
						if (ia_data){
							ProjectE(list_1.wEdit).docNoaTemp = String(ia_data.docNoa);							
						}
						break;
				}
				return false;
			}
		]]>
	</fx:Script>
	<x2:sysBG/>
	<x2:subFunHead/>

	<x2:comList x="81" y="59" id="list_1" fCatchFun="catchFun">
	</x2:comList>
	<s:DataGrid id="grid_1" x="55" y="87" width="92%" height="80%" alpha="0.7">
		<s:columns>
			<s:ArrayList>
				<s:GridColumn dataField="sn" visible="false"/>
				<s:GridColumn headerText="{iR.funcItemSn}" dataField="funcItemSn" width="100" labelFunction="itemName"/>
				<s:GridColumn headerText="{iR.eDate}" dataField="eDate" width="120"/>
				<s:GridColumn headerText="{iR.seTimeHM}" dataField="seTimeHM" width="120"/>
				<s:GridColumn headerText="{iR.eLoaction}" dataField="eLoaction"/>
				<s:GridColumn headerText="{iR.attendees}" dataField="attendees" width="140"/>
				<s:GridColumn headerText="{iR.budget}" dataField="budget" width="50"/>
				<s:GridColumn headerText="{iR.creator}" dataField="creator" width="80"/>
				<s:GridColumn headerText="{iR.createDate}" dataField="createDate" width="130"/>
				<s:GridColumn headerText="{iR.reviser}" dataField="reviser" width="80"/>
				<s:GridColumn headerText="{iR.reviseDate}" dataField="reviseDate" width="130"/>
			</s:ArrayList>
		</s:columns>
	</s:DataGrid>
</s:Application>
