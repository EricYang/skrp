<?xml version="1.0" encoding="utf-8"?>
<s:TitleWindow 
	xmlns:fx="http://ns.adobe.com/mxml/2009" 
	xmlns:s="library://ns.adobe.com/flex/spark"  
	xmlns:mx="library://ns.adobe.com/flex/mx" 
	width="470" height="176" xmlns:x2="x2.*" 
	
  	creationComplete="init()"
	preinitialize="{iR=Fun.getLang('UploadMeeting')}"
 	>
	<fx:Script>
		<![CDATA[
			import x2.*; import mx.collections.ArrayList; import mx.collections.ArrayCollection;
			
			[Bindable]
			private var iR:Object;
			private function init():void{
				qry_1.aoItem = [					
					{source:location},
					{source:subject},
					{source:cDate,		dataType:"D",	relat:cDate2},
					{source:cDate2,		dataType:"D"}					
				];					
			}	
		]]>
	</fx:Script>
	<x2:comQuery x="377" y="10" id="qry_1">
	</x2:comQuery>
	<mx:Form x="7" y="10" horizontalScrollPolicy="off" verticalScrollPolicy="off">
		<mx:FormItem label="{iR.cDate} :">
			<mx:HBox width="100%">
				<mx:DateField formatString="YYYY/MM/DD" id="cDate" yearNavigationEnabled="true"/>
				<mx:Label text=" - "/>
				<mx:DateField formatString="YYYY/MM/DD" id="cDate2" yearNavigationEnabled="true"/>
			</mx:HBox>
		</mx:FormItem>
		<mx:FormItem label="{iR.location} :">
			<s:TextInput width="204" id="location"/>
		</mx:FormItem>
		<mx:FormItem label="{iR.subject} :">
			<s:TextInput width="204" id="subject"/>
		</mx:FormItem>
	</mx:Form>
</s:TitleWindow>
