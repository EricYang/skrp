<?xml version="1.0" encoding="utf-8"?>
<s:Application xmlns:fx="http://ns.adobe.com/mxml/2009"
			   xmlns:s="library://ns.adobe.com/flex/spark"
			   xmlns:mx="library://ns.adobe.com/flex/mx"
			   xmlns:x2="x2.*"
			   width="100%" height="100%" 
			   creationComplete="init()"
			   preinitialize="{iR=Fun.getLang('AccPettyCash')}">
	<fx:Script>
		<![CDATA[
			import x2.*; import mx.collections.ArrayList; import mx.collections.ArrayCollection;			
			
			[Bindable]
			private var iR:Object;	
			[Bindable]
			private var is_app:String = Fun.sApp;	
			[Bindable]
			public var ia_accName:ArrayList = new ArrayList(Fun2.accNameDS(is_app, 2, true));
			
			private function init():void {			
				list_1.wQuery = new AccPettyCashQ();
				list_1.wEdit = new AccPettyCashE();			
				list_1.gList = grid_1;
				list_1.init();			
			}
			private function accName(p_row:Object, p_column:GridColumn):String {
				return AR.getListLabel(ia_accName, p_row[p_column.dataField]);
			}			
		]]>
	</fx:Script>
	<x2:sysBG/>
	<x2:subFunHead/>
	
	<x2:comList x="81" y="59" id="list_1">
	</x2:comList>
	<s:DataGrid id="grid_1" x="55" y="87" width="92%" height="80%" alpha="0.7">	
		<s:columns>
			<s:ArrayList>
				<s:GridColumn dataField="sn" headerText="sn" visible="false"/>
				<s:GridColumn dataField="serialNo" headerText="{iR.serialNos}" width="150"/>
				<s:GridColumn dataField="staffName" headerText="{iR.StaffSn}"/>
				<s:GridColumn dataField="cDate" headerText="{iR.cDate}" width="100"/>
				<s:GridColumn dataField="cAmounts" headerText="{iR.cAmounts}" width="100"/>
				<s:GridColumn dataField="accIocSn" headerText="{iR.accIocSn}" labelFunction="accName"/>
				<s:GridColumn dataField="pExcerpt" headerText="{iR.pExcerpt}" width="100"/>
				<s:GridColumn headerText="{iR.creator}" dataField="creator" width="80"/>
				<s:GridColumn headerText="{iR.createDate}" dataField="createDate" width="130"/>
				<s:GridColumn headerText="{iR.reviser}" dataField="reviser" width="80"/>
				<s:GridColumn headerText="{iR.reviseDate}" dataField="reviseDate" width="130"/>
			</s:ArrayList>
		</s:columns>
	</s:DataGrid>
</s:Application>
