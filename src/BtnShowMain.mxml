<?xml version="1.0" encoding="utf-8"?>
<mx:Button 	xmlns:fx="http://ns.adobe.com/mxml/2009" 
			xmlns:s="library://ns.adobe.com/flex/spark"  
		   xmlns:mx="library://ns.adobe.com/flex/mx"
		   label="{iR.label}" click="Fun2.showMain()" buttonMode="true"
		   icon="@Embed(source='x2/image/toLeft.gif')"
		   rollOver="button_rollOver(event)"
		   rollOut="button_rollOut(event)"
		   preinitialize="{iR=Fun.getLang('BtnShowMain')}"
		   >
	
	<fx:Declarations>
		<!-- Place non-visual elements (e.g., services, value objects) here -->
	</fx:Declarations>
	
	<fx:Script>
		<![CDATA[
			import x2.*; import mx.collections.ArrayList; import mx.collections.ArrayCollection;
			
			[Bindable]
			private var iR:Object;
			
			private function button_rollOver(evt:MouseEvent):void {
				//this.toolTip = "what"; 					
				this.errorString = "Back";
			}
			
			private function button_rollOut(evt:MouseEvent):void {
				this.errorString = "";
			}
		]]>
	</fx:Script>
	
</mx:Button>

