<?xml version="1.0" encoding="utf-8"?>
<s:Application 
	xmlns:fx="http://ns.adobe.com/mxml/2009" 
	xmlns:s="library://ns.adobe.com/flex/spark"  
	xmlns:mx="library://ns.adobe.com/flex/mx" 
	xmlns:x2="x2.*" 
	 
	
	 
	width="100%" height="100%" 
 	creationComplete="init()"
	preinitialize="{iR=Fun.getLang('FoodTable')}"
 	>
	<fx:Script>
		<![CDATA[		
			import x2.*; import mx.collections.ArrayList; import mx.collections.ArrayCollection;
			
			[Bindable]
			private var iR:Object;
			[Bindable]
			private var is_app:String = Fun.sApp;
			[Bindable]
			private var i_session:Object = Fun.readJson(is_app, {type:"getSession", sessionName:["userType"]});

			private function init():void {		
				list_1.nAppRange = 1; //0 不分  1 個人	2 部門
				list_1.asFOwner = ["creator"];
				
				list_1.wQuery = new FoodTableQ();
				list_1.wEdit = new FoodTableE();			
				list_1.gList = grid_1;
				list_1.init();
				
				var t_data:Object ={
					data: "listFoodTable"
				};
				grid_1.dataProvider = new ArrayCollection(Fun.readRows(is_app, t_data));
				
				switch (i_session.userType){
					case "2":
						list_1.btnCreate.visible = false;
						list_1.btnCreate.width = 0;
						list_1.btnUpdate.visible = false;
						list_1.btnUpdate.width = 0;
						list_1.btnDelete.visible = false;
						list_1.btnDelete.width = 0;
						break;
					case "3":
					case "4":
						list_1.btnCreate.visible = true;
						list_1.btnUpdate.visible = true;
						list_1.btnDelete.visible = true;				
						break;
				}
			}						
			private function catchFun(p_data:Object):Boolean {
				if (i_session.userType == "2"){
					if (p_data.fun == "U"){
						list_1.btnClick("V");
						return true;
					}else{
						return false;
					}				
				}
				return false;
			}
		]]>
	</fx:Script>
	<x2:sysBG/>
	<x2:subFunHead/>
	
	<x2:comList x="81" y="59" id="list_1" fCatchFun="catchFun">
	</x2:comList>
	<s:DataGrid id="grid_1" x="55" y="87" width="92%" height="80%" alpha="0.7">
		<s:columns>
			<s:ArrayList>
				<s:GridColumn dataField="sn" visible="false"/>
				<s:GridColumn headerText="{iR.cDate}" dataField="cDate" width="120"/>
				<s:GridColumn headerText="{iR.remark}" dataField="remark"/>
				<s:GridColumn headerText="{iR.creator}" dataField="creator" width="100"/>
				<s:GridColumn headerText="{iR.createDate}" dataField="createDate" width="150"/>
				<s:GridColumn headerText="{iR.reviser}" dataField="reviser" width="100"/>
				<s:GridColumn headerText="{iR.reviseDate}" dataField="reviseDate" width="150"/>
			</s:ArrayList>
		</s:columns>
	</s:DataGrid>
</s:Application>
