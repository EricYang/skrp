<?xml version="1.0" encoding="utf-8"?>
<s:TitleWindow 
	xmlns:fx="http://ns.adobe.com/mxml/2009" 
	xmlns:s="library://ns.adobe.com/flex/spark"  
	xmlns:mx="library://ns.adobe.com/flex/mx" 
	xmlns:x2="x2.*"
	width="500" height="220"
	close="closeWin()"
  	creationComplete="init()"
	preinitialize="{iR=Fun.getLang('AccReport')}"
	title="{iR.reportTitle604}"
	>
	<fx:Script>
		<![CDATA[

			import mx.utils.StringUtil;
			import x2.*; import mx.collections.ArrayList; import mx.collections.ArrayCollection;
			
			public var fAfterOk:Function;
			
			[Bindable]
			private var iR:Object;
			[Bindable]
			private var is_app:String = Fun.sApp;
			[Bindable]
			private var i_session:Object = Fun.readJson(is_app, {type:"getSession", sessionName:["academicYear","semester", "usersSn","schoolDSn"]});
			
			private function init():void{
				Fun.setItem(academicYear, int(i_session.academicYear));
				Fun.setItem(semester, int(i_session.semester));
				
				var t_date:Date = new Date();
				Fun.setItem(cYear, t_date.fullYear);
				Fun.setItem(cMonth, t_date.month + 1);				
			}	
			private function openPdfFiles():void {
				if (Fun.getItem(cYear) != null && (int(Fun.getItem(cYear))<1900 || int(Fun.getItem(cYear)) > 3000)){					
					Fun.msg("E", iR.message02);
					Fun.focusField(cYear);
					return;
				}
				if (Fun.getItem(cMonth) != null && (int(Fun.getItem(cMonth))<1 || int(Fun.getItem(cMonth)) > 12)){
					Fun.msg("E", iR.message03);
					Fun.focusField(cMonth);
					return;
				}
				
				//執行 PDF 資料匯出
				var fileNameTmp:String = StringUtil.trim('AccReport604_' + String(i_session.schoolDSn) + '_' + String(i_session.usersSn) + '_' + String(new Date().getTime()) + '.pdf');
				var m_data:Object = {
					cYear: Fun.getItem(cYear),
					cMonth: ST.preZero(2,int(Fun.getItem(cMonth))),
					fileNameTmp: fileNameTmp,
					defaultPdfPath: "../" + Fun2.fPdf				
				};
				var ts_result:String = Fun.sync(is_app, "AccReport604", m_data, false) as String;
				
				switch (ts_result){
					case "0":
						Fun.msg("E", iR.message04);
						break;
					case "1":
						Fun.openFile(Fun.sDirRoot + Fun2.fPdf + fileNameTmp);
						break;
				}	
			}
			//離開
			private function closeWin():void{
				Fun.closePopup(this);
			}
		]]>
	</fx:Script>
	<s:Form x="10" y="10" width="100%">
		<s:layout> 
			<s:FormLayout gap="-8"/>
		</s:layout>
		<s:FormItem label="{iR.yearFor}">
			<mx:HBox width="100%">
				<mx:Label id="academicYear"/>
				<mx:Label text=" ("/>
				<mx:Label id="semester"/>
				<mx:Label text=")"/>
			</mx:HBox>
		</s:FormItem>
		<s:FormItem label="{iR.formYearToMonth}">
			<s:HGroup>
				<x2:Num1 id="cYear"/>				
				<mx:Label text=" /"/>
				<x2:Num1 id="cMonth"/>
			</s:HGroup>
		</s:FormItem>
	</s:Form>
	<mx:HBox x="10" y="152">
		<x2:BtnPdf id="outputPdf" click="openPdfFiles()"/>		
		<mx:Button height="26" click="closeWin()" icon="@Embed(source='x2/image/close.png')" id="cmdExit" label="{Fun.R.exit}" buttonMode="true"/>
	</mx:HBox>
</s:TitleWindow>
